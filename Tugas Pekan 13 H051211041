    {
      "cell_type": "code",
      "source": [
        "awal = int(input('Input Nilai Awal : '))\n",
        "akhir = int(input('Input Nilai Akhir : '))\n",
        "\n",
        "for Y in range(awal,akhir+1):\n",
        "  if Y %2 == 0:\n",
        "    print (Y, 'adalah jenis Bilangan Genap')\n",
        "  else :\n",
        "    print (Y, 'adalah jenis Bilangan Ganjil')"
